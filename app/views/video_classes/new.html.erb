<h1>Novo Vídeo</h1>

<% if @video_class.errors.any? %>
  <div class="alert">
    <p>Não foi possível criar o vídeo</p>
    <p>Confira os erros abaixo:</p>
    <ul>
      <% @video_class.errors.full_messages.each do |error|%>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end%>

<%= form_with(model: @video_class) do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :video_url %><br>
    <%= f.url_field :video_url %>
  </div>
  <div>
    <%= f.label :start_at %><br>
    <%= f.datetime_local_field :start_at %>
  </div>
  <div>
    <%= f.label :end_at %><br>
    <%= f.datetime_local_field :end_at %>
  </div>

  <div>
    <%= f.label :category %><br>
    <%= f.collection_select :category,
                 @categories, :name, :name, 
                 prompt: '--select--' %>
  </div>

  <%= f.submit 'Criar vídeo' %>
<% end %>
