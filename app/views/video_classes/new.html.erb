<h1>Novo Vídeo</h1>

<%= form_with(model: @video_class) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :video_url %>
    <%= f.url_field :video_url %>
  </div>
  <div>
    <%= f.label :start_at %>
    <%= f.datetime_local_field :start_at %>
  </div>
  <div>
    <%= f.label :end_at %>
    <%= f.datetime_local_field :end_at %>
  </div>
 
  <%= f.submit 'Criar vídeo' %>
<% end %>