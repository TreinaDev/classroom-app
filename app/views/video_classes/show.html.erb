<% if @video_class.disabled? %>
  <h1><%= t(".disabled_name", name: @video_class.name) %></h1>
<% else %>
  <h1><%= @video_class.name %></h1>
<% end %>

<dt><%= VideoClass.human_attribute_name("description") %></dt>
<dd><%= @video_class.description %></dd>
<dt><%= VideoClass.human_attribute_name("video_url") %></dt>
<dd><%= @video_class.video_url  %></dd>
<dt><%= VideoClass.human_attribute_name("category_id") %></dt>
<dd><%= @video_class.category.name %></dd>
<dt><%= User.model_name.human %></dt>
<dd><%= @video_class.user.name  %></dd>
<dt><%= t('.schedule') %></dt>
<dd>
  <%= "#{I18n.localize(@video_class.start_at, format: :only_time)} - 
         #{I18n.localize(@video_class.end_at, format: :only_time)}" %>
</dd>
<dt><%= VideoClass.human_attribute_name("start_at") %></dt>
<dd><%= I18n.localize(@video_class.start_at.to_date) %></dd>

<% if customer_signed_in? && @video_class.enabled? %>
  <% if current_customer.plan&.watch_video_class?(@video_class.category) %>
    <%= link_to t('.attend_class'),
                watch_video_class_path(@video_class),
                method: :post %>
  <% end %>
<% end %>

<% if @play %>
  <div style="padding:56.25% 0 0 0;position:relative;">
    <iframe src="https://player.vimeo.com/video/112233728?autoplay=1"
              style="position:absolute;top:0;left:0;width:100%;height:100%;" 
              frameborder="0" allow="autoplay; fullscreen; picture-in-picture" 
              allowfullscreen>
    </iframe>
  </div>
  <script src="https://player.vimeo.com/api/player.js"></script>
<% end %>
