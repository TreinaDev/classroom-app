<nav>
  <% if user_signed_in? %>
    <%= current_user.name %>
    <%= link_to 'Minha Conta', user_path(current_user) %>

    <%= link_to t('misc.exit'), destroy_user_session_path, method: :delete %>
  <% elsif customer_signed_in? %>
    <%= link_to 'Agenda de Aulas', scheduled_video_classes_path %>

    <%= current_customer.full_name %>
    <%= link_to 'Minha Conta', customer_path(current_customer) %>

    <%= link_to t('misc.exit'), destroy_customer_session_path, method: :delete %>
  <% else %>
    <%= link_to t('misc.user_sign_in'), new_user_session_path %>
    <%= link_to t('misc.customer_sign_in'), new_customer_session_path %>
  <% end %>
</nav>